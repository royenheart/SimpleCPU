{
    "editor.fontSize": 17,
    "editor.fontWeight": "bold",
    "files.autoSave": "off",
    "workbench.colorTheme": "Default Light+",
    // 设置vscode背景图片样式，需安装对应插件
    "background.enabled": true,
    "background.useDefault": false,
    "background.customImages": [
        "file:///D:/Background/wendy.png"
